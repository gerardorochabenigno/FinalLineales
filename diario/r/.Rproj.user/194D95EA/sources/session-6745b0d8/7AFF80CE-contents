model {
  # Likelihood
  for (t in 1:n) {
    y[t] ~ dnorm(mu[t], tau.y)  
  }
  
  # State equations
  mu[1] ~ dnorm(4756, 0.0001)  # Priori difusa para mu inicial
  for (t in 2:n) {
    mu[t] ~ dnorm(mu[t-1], tau.mu)  # Proceso de nivel local
  }

  # Priors
  tau.y  ~ dgamma(0.001, 0.001)  # Varianza observacional (opcional)
  tau.mu ~ dgamma(0.001, 0.001)  # Varianza del proceso
}